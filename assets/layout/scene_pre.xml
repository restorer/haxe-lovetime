<?xml version="1.0" encoding="utf-8"?>
<resources>
    <layout name="scene_pre">
        <AbsoluteLayout
            layout_width="match_parent"
            layout_height="match_parent"
        >
            <ImageView
                id="@id/background_image"
                layout_x="0"
                layout_y="0"
            />
            <TextView
                id="@id/title_text"
                layout_cx="50%"
                layout_cy="120"
                style="@style/common_text"
                textSize="@dimen/pre_title_textSize"
            />
            <View
                id="@id/container"
                layout_x="0"
                layout_y="0"
            />
            <AbsoluteLayout
                id="@id/cat_group"
                layout_x="0"
                layout_y="0"
                layout_width="50"
                layout_height="67"
            >
                <ImageView
                    layout_cx="50%"
                    layout_ey="100%"
                    drawable="@drawable/cat_avatar_shadow"
                />
                <ImageView
                    layout_cx="50%"
                    layout_y="0"
                    drawable="@drawable/cat_avatar"
                />
            </AbsoluteLayout>
            <Button
                id="@id/play_btn"
                layout_cx="50%"
                layout_cy="690"
                tags="pressSound"
                font="@font/primary"
                style="@style/common_button"
                textSize="@dimen/pre_play_textSize"
                text="@string/pre_play"
            />
        </AbsoluteLayout>
    </layout>
</resources>
