<?xml version="1.0" encoding="utf-8"?>
<resources>
    <layout name="scene_start">
        <AbsoluteLayout
            layout_width="match_parent"
            layout_height="match_parent"
        >
            <ImageView
                id="background_ep1_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep1_nocolor"
                visibility="gone"
            />
            <ImageView
                id="background_ep1_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep1_hascolor"
                visibility="gone"
            />
            <ImageView
                id="background_ep2_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep2_nocolor"
                visibility="gone"
            />
            <ImageView
                id="background_ep2_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep2_hascolor"
                visibility="gone"
            />
            <ImageView
                id="background_ep3_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep3_nocolor"
                visibility="gone"
            />
            <ImageView
                id="background_ep3_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep3_hascolor"
                visibility="gone"
            />
            <TextView
                id="intro_1_text"
                layout_cx="50%"
                layout_cy="265"
                style="@style/common_text"
                textSize="@dimen/start_intro_textSize"
                text="@string/start_intro_1"
                visibility="gone"
            />
            <TextView
                id="intro_2_text"
                layout_cx="50%"
                layout_cy="265"
                style="@style/common_text"
                textSize="@dimen/start_intro_textSize"
                text="@string/start_intro_2"
                visibility="gone"
            />
            <TextView
                id="intro_3_text"
                layout_cx="50%"
                layout_cy="380"
                style="@style/common_text"
                textSize="@dimen/start_intro_textSize"
                text="@string/start_intro_3"
                visibility="gone"
            />
            <ImageView
                id="snake_small"
                layout_ex="992"
                layout_y="32"
