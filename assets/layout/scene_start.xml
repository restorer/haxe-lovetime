                visibility="gone"
            />
            <ImageView
                id="cat_small"
                layout_x="32"
                layout_y="32"
                drawable="@drawable/cat_small"
                visibility="gone"
            />
            <AbsoluteLayout
                id="vs_group"
                layout_x="0"
                layout_y="0"
                layout_width="match_parent"
                layout_height="match_parent"
                visibility="gone"
            >
                <ImageView
                    layout_cx="280"
                    layout_cy="280"
                    drawable="@drawable/cat_big"
                />
                <ImageView
                    layout_cx="744"
                    layout_cy="488"
                    drawable="@drawable/snake_big"
                />
                <TextView
                    layout_cx="50%"
                    layout_cy="50%"
                    style="@style/common_text"
                    textSize="@dimen/start_vs_textSize"
                    text="@string/start_vs"
                />
            </AbsoluteLayout>
            <Button
                id="next_btn"
                layout_cx="50%"
                layout_cy="690"
                tags="pressSound"
                font="@font/primary"
                style="@style/common_text"
                textSize="@dimen/start_next_textSize"
                selector="@selector/common_button"
                text="@string/start_next"
                visibility="gone"
            />
        </AbsoluteLayout>
    </layout>
</resources>
