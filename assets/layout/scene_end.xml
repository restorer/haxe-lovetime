<?xml version="1.0" encoding="utf-8"?>
<resources>
    <layout name="scene_end">
        <AbsoluteLayout
            layout_width="match_parent"
            layout_height="match_parent"
        >
            <ImageView
                id="@id/background_ep1_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep1_hascolor"
                visibility="gone"
            />
            <ImageView
                id="@id/background_ep1_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep1_nocolor"
                visibility="gone"
            />
            <ImageView
                id="@id/background_ep2_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep2_hascolor"
                visibility="gone"
            />
            <ImageView
                id="@id/background_ep2_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep2_nocolor"
                visibility="gone"
            />
            <ImageView
                id="@id/background_ep3_hascolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep3_hascolor"
                visibility="gone"
            />
            <ImageView
                id="@id/background_ep3_nocolor"
                layout_x="0"
                layout_y="0"
                drawable="@drawable/background_ep3_nocolor"
                visibility="gone"
            />
            <ImageView
                id="@id/snake"
                layout_cx="50%"
                layout_cy="50%"
                drawable="@drawable/snake_big"
            />
            <TextView
                id="@id/result_text"
                layout_cx="50%"
                layout_cy="25%"
                style="@style/common_text"
                textSize="@dimen/end_result_textSize"
                textAlign="center"
                text="@string/end_result"
                visibility="gone"
            />
            <Button
                id="@id/restart_btn"
                layout_cx="50%"
                layout_cy="690"
                tags="pressSound"
                font="@font/primary"
                style="@style/common_button"
                textSize="@dimen/end_restart_textSize"
                text="@string/end_restart"
                visibility="gone"
            />
        </AbsoluteLayout>
    </layout>
</resources>
